@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner11.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn more about Code University in our "About" section
                    <a class="btn btn-default" asp-area="" asp-controller="Home" asp-action="About">
                        Learn More
                    </a>
                </p>
            </div>
        </div>  
        <div class="item">
            <img src="~/images/banner22.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    To enroll, please visit our contact page to get in touch!
                    <a class="btn btn-default" asp-area="" asp-controller="Home" asp-action="Contact">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner33.svg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Student enrollment can be found in our Students page!
                    <a class="btn btn-default" asp-area="" asp-controller="Students" asp-action="Index">
                        Learn More
                    </a>
                </p>        
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Welcome!</h2>
            <p>Thank you for visiting Code University!</p>
    </div>
    <div class="col-md-6">
        <h2>Our Mission</h2>
            <p>To educate underpriviledged individuals so they may achieve thier dreams of a better future.</p>
    </div>
</div>
